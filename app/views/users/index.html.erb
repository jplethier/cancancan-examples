<div>
  <table>
    <thead>
      <td>Email</td>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td>
            <% if can? :update, user %>
              <%= link_to "Editar", edit_user_path(user) %>
            <% end -%>
            <% if can? :destroy, user %>
              <%= link_to "Remover", edit_user_path(user), method: :delete %>
            <% end -%>
        </tr>
      <% end %>
    </h3>
